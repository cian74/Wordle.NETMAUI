<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CianBarrettWordle22.MainPage">

    <StackLayout>
        <Label Text="Guess the Word!" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="20"/>
        <Entry x:Name="GuessEntry" Placeholder="Enter your guess" HorizontalOptions="CenterAndExpand" Margin="20"/>
        <Button Text="Check Guess" Clicked="OnCheckGuessClicked" HorizontalOptions="CenterAndExpand" Margin="20"/>
        <Label x:Name="ResultLabel" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="20"/>
    </StackLayout>

</ContentPage>
